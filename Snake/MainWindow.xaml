<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        KeyDown="gameCanvas_KeyDown">
    <StackPanel Background="Black">
        <StackPanel Orientation="Horizontal" Background="Wheat">
            <TextBlock Text="Score" Margin="5"/>
            <TextBlock x:Name="tbScore" Margin="5"/>
        </StackPanel>
        <Canvas Width="500" Height="500" x:Name="gameCanvas" Margin="20" Background="WhiteSmoke"/>
    </StackPanel>
</Window>
